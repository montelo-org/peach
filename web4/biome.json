{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"noNonNullAssertion": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			},
			"complexity": {
				"noForEach": "off"
			},
			"recommended": true
		}
	},
	"formatter": {
		"lineWidth": 100,
		"indentWidth": 2
	}
}
